#!/usr/bin/env bash

set -e
set -o pipefail

case "$@" in
    "package version" | "package version "* | "force user password generate"*)
        exec `dirname "$0"`/../lib/node_modules/@salesforce/cli/bin/run "$@"
        exit 0
    ;;
esac

for arg in "$@"; do
    if [[ "$arg" == "--json" ]]; then
        exec `dirname "$0"`/../lib/node_modules/@salesforce/cli/bin/run "$@" | jq -r . | grep -vi password || true
        exit 0
    fi
done

exec `dirname "$0"`/../lib/node_modules/@salesforce/cli/bin/run "$@" | grep -vi password || true
